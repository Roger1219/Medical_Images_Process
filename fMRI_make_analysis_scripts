#!/bin/bash
# ==========================================================================
# script generated by the command:
#please input the patient's name first.
patient_name="ZH"


 afni_proc.py -subj_id $patient_name                    \
    -blocks tshift align tlrc volreg blur mask scale  regress   \
    -radial_correlate_blocks tcat volreg    \
    -copy_anat T1_3D.nii \
    -dsets epi_r1.nii epi_r2.nii        \
    -tcat_remove_first_trs 5            \
    -align_opts_aea         \
    -check_flip             \
    -tlrc_base MNI152_T1_2009c+tlrc					\
    -volreg_align_to MIN_OUTLIER        \
    -volreg_align_e2a                   \
    -volreg_tlrc_warp       \
    -blur_size 4.0          \
    -mask_epi_anat yes      \
    -regress_stim_times     \
        stimuli/Convergence.txt         \
        stimuli/Relax.txt               \
    -regress_stim_labels Convergence Relax              \
     -regress_basis 'BLOCK(6,3)'        \
     -regress_censor_motion 0.3         \
     -regress_motion_per_run            \
     -regress_opts_3dD \
     -jobs 16 \
     -gltsym 'SYM: Convergence -Relax'     \
     -glt_label 1 C-R       \
     -regress_compute_fitts             \
     -regress_make_ideal_sum sum_ideal.1D     \
     -regress_est_blur_epits            \
     -regress_est_blur_errts            \
     -regress_run_clustsim no           \
     -execute


#copy results files for further analysis
cp $patient_name.results/stats.$patient_name* ./